{
    "name": "@hckrnews/error",
    "description": "Extended Errors",
    "version": "1.0.0",
    "author": {
        "name": "Pieter Wigboldus",
        "url": "https://hckr.news/"
    },
    "license": "MIT",
    "scripts": {
        "lint": "eslint src/*.js --config .eslintrc",
        "lint:report": "eslint src/*.js --config .eslintrc -f json -o report.json",
        "lint:fix": "eslint src/*.js --config .eslintrc --fix",
        "test": "jest",
        "test:watch": "jest src --watch",
        "coveralls": "jest && codecov && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
        "cpd": "node_modules/jscpd/bin/jscpd src",
        "vulnerabilities": "npm audit --only=prod",
        "build": "microbundle --target node src/index.js"
    },
    "type": "module",
    "main": "dist/error.js",
    "files": [
        "src/index.js",
        "src/app-error.js",
        "src/authentication-error.js",
        "src/no-content-error.js",
        "src/not-found-error.js",
        "src/not-implemented-error.js",
        "src/server-error.js",
        "src/timeout-error.js",
        "src/validation-error.js",
        "src/rate-limit-error.js",
        "src/schemas/error.js",
        "dist/error.cjs",
        "dist/error.cjs.map",
        "dist/error.js",
        "dist/error.js.map",
        "dist/error.module.mjs",
        "dist/error.module.mjs.map",
        "dist/error.umd.cjs",
        "dist/error.umd.cjs.map"
    ],
    "source": "src/error.js",
    "module": "dist/error.module.mjs",
    "unpkg": "dist/error.umd.cjs",
    "umd:main": "dist/error.umd.cjs",
    "exports": {
        "node": {
            "module": "./src/index.js",
            "require": "./dist/error.umd.cjs"
        },
        "require": "./dist/error.umd.cjs",
        "default": "./src/index.js"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/eslint-parser": "^7.14.7",
        "@babel/plugin-transform-modules-commonjs": "^7.14.0",
        "@babel/preset-env": "^7.9.5",
        "@hckrnews/eslint-config": "^2.0.1",
        "@jest/globals": "^27.0.6",
        "babel-jest": "^27.0.5",
        "codecov": "^3.6.5",
        "coveralls": "^3.0.13",
        "eslint": "^8.4.1",
        "eslint-config-airbnb": "^19.0.2",
        "eslint-config-prettier": "^8.2.0",
        "eslint-plugin-html": "^6.1.2",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.0.5",
        "jest-junit": "^13.0.0",
        "jest-sonar-reporter": "^2.0.0",
        "jscpd": "^3.2.1",
        "microbundle": "^0.15.1",
        "prettier": "^2.5.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/hckrnews/error"
    },
    "engines": {
        "node": ">= 14"
    },
    "keywords": [
        "error",
        "exception",
        "catch"
    ],
    "dependencies": {
        "@hckrnews/validator": "^8.0.0"
    },
    "funding": {
        "type": "github",
        "url": "https://github.com/sponsors/w3nl"
    }
}
